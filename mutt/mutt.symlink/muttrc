# Default account
source ~/.mutt/account.gmail.petter.rodhelind

# Keybindings for folders
bind editor <space> noop
macro index gi "<change-folder>=petter.rodhelind-gmail.com/INBOX<enter>" "Go to inbox"
macro index ga "<change-folder>=petter.rodhelind-gmail.com/archive<enter>" "Go to all mail"
macro index gs "<change-folder>=petter.rodhelind-gmail.com/sent<enter>" "Go to sent mail"
macro index,pager A "<tag-prefix><save-message>=petter.rodhelind-gmail.com/archive<enter>" "Move to all mail"

# get colors
# source ~/.mutt/colors/gotbletu
# source ~/.mutt/colors/one
# source ~/.mutt/colors/mutt-colors-solarized-dark-16
source ~/.mutt/colors/mutt-colors-base16-ish
#color status green default

# Default text editor
set editor = "$EDITOR -c 'normal gg'"

# mailcap file
set mailcap_path = ~/.mutt/mailcap

# aliases
set alias_file = ~/.mutt/aliases
source ~/.mutt/aliases

# charset
set charset = "utf-8"
set assumed_charset = "utf-8"
set send_charset = "utf-8"

# check for new mail
set mail_check = 60    # seconds
set timeout = 3
macro index O "<shell-escape>offlineimap<enter>"           "run offlineimap to sync all mail"
macro index o "<shell-escape>offlineimap -qf INBOX<enter>" "run offlineimap to sync inbox"

# search and contact completion via 'mu'
set query_command = "mu cfind --format=mutt-ab  '%s'"
macro index Z "<shell-escape>mu find --clearlinks --format=links --linksdir=~/.mu/results " "mu find"
macro index S "<change-folder-readonly>~/.mu/results<enter>" "mu find results"

# basic config
set move = no           # don't move read messages
set include             # include message in reply
set wait_key = no       # don't wait for key press after running external cmd
set quit = ask-yes      # ask for quit
set delete = yes        # don't ask for purging msgs marked for deletion
set confirmappend = no  # don't ask when appending msgs to existing mailboxes
set mark_old = no       # just use read/new and skip the "old new" mark
set sleep_time = 0      # speed up folder switch

# saner copy/move dialogs
macro index C "<tag-prefix><copy-message>?" "copy a message to a mailbox"
macro index M "<tag-prefix><save-message>?" "move a message to a mailbox"

# header stuff
ignore *
unignore date: from: to: cc: subject:
unhdr_order *
hdr_order date: to: cc: from: subject:

# sorting
set sort = "threads"
set sort_aux = "reverse-last-date-received"

# status bar
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# index viewing
set date_format = "%y-%m-%d"
set index_format = "%2C: [%Z][%2M]   %D   %-35.35F  |  %s"
folder-hook . 'push "<collapse-all>"'
set collapse_unread = no    # never collapse unread messages
set uncollapse_jump         # jumps to first unread msg on uncollapse thread

# index key bindings
bind index gg       first-entry
bind index G        last-entry
bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

# pager viewing
alternative_order text/plain text/html
set wrap = 110              # 80 wrap + 30 sidebar
set markers = no            # don't put + on wrapped lines
set pager_index_lines = 10  # show 10 above selected email
set pager_context = 3
set pager_stop              # don't go to next msg automagically
set menu_scroll             # scroll one line and not full page
set tilde                   # show ending blank lines with ~ like in vi

# pager key bindings
bind pager k        previous-line
bind pager j        next-line
bind pager gg       top
bind pager G        bottom
bind pager R        group-reply
bind pager <Return> exit

# view html attachments externally
macro attach 'V' "<pipe-entry>cat > /tmp/mutt_mail.html && open /tmp/mutt_mail.html 

# decode attached file names correctly
set rfc2047_parameters = yes

# autoview
auto_view text/html

# compose view options
set realname = "Petter Rodhelind"    # who am i?
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
#set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote                    # include message in forwards
set text_flowed=yes                  # add format=flowed to mail header

# sidebar patch
set sidebar_delim = '  | '
set sidebar_visible = yes
set sidebar_width = 30
bind index,pager <up> sidebar-prev
bind index,pager <down> sidebar-next
bind index,pager <right> sidebar-open
